<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net45</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Jerome Haltom</Authors>
        <Description>NXKit forms the basis of an XML processing engine that can be used to implement other XML based models, such as XForms, or theoritically a full web browser user agent.

Schema support is available in other NXKit packages.</Description>
        <PackageProjectUrl>https://github.com/nxkit</PackageProjectUrl>
        <PackageIconUrl></PackageIconUrl>
        <Copyright>Copyright © Jerome Haltom 2014</Copyright>
        <PackageLicenseUrl>http://www.gnu.org/licenses/gpl.txt</PackageLicenseUrl>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageTags>xml xforms</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="xml.xsd" />
      <None Remove="xsdschema.xsd" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="xml.xsd" />
      <EmbeddedResource Include="xsdschema.xsd" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
      <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="System.ComponentModel.Composition" />
      <Reference Include="System.Xaml" />
    </ItemGroup>

</Project>
