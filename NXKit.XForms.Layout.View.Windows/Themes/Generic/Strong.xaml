<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NXKit.XForms.Layout.View.Windows"
    xmlns:nxw="clr-namespace:NXKit.View.Windows;assembly=NXKit.View.Windows">

    <DataTemplate
        x:Key="NXKit:{http://schemas.nxkit.org/2014/xforms-layout}strong">
        <nxw:ElementViewModelControl
            Element="{Binding}"
            ElementViewModelType="{x:Type local:StrongViewModel}">
            <nxw:ElementViewModelControl.Resources>
                <DataTemplate
                    DataType="{x:Type local:StrongViewModel}">
                    <nxw:NodesPresenter
                        ItemsSource="{Binding Element.Nodes}" />
                </DataTemplate>
            </nxw:ElementViewModelControl.Resources>
        </nxw:ElementViewModelControl>
    </DataTemplate>

</ResourceDictionary>
