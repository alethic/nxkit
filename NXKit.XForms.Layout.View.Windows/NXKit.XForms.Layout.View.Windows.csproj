<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net45</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Product>NXKit XForms Layout View for WPF</Product>
        <Description>XForms Layout additions for the NXKit View for WPF.</Description>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Themes\Generic.xaml" />
      <None Remove="Themes\Generic\Anchor.xaml" />
      <None Remove="Themes\Generic\Form.xaml" />
      <None Remove="Themes\Generic\Icon.xaml" />
      <None Remove="Themes\Generic\Item.xaml" />
      <None Remove="Themes\Generic\List.xaml" />
      <None Remove="Themes\Generic\Paragraph.xaml" />
      <None Remove="Themes\Generic\Section.xaml" />
      <None Remove="Themes\Generic\Segment.xaml" />
      <None Remove="Themes\Generic\Table.xaml" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
    </ItemGroup>

    <ItemGroup>
      <Page Include="Themes\Generic.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Anchor.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Form.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Icon.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Item.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\List.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Paragraph.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Section.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Segment.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
      <Page Include="Themes\Generic\Table.xaml">
        <Generator>XamlIntelliSenseFileGenerator</Generator>
      </Page>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\NXKit.View.Windows\NXKit.View.Windows.csproj" />
        <ProjectReference Include="..\NXKit.XForms.Layout\NXKit.XForms.Layout.csproj" />
        <ProjectReference Include="..\NXKit.XForms.View.Windows\NXKit.XForms.View.Windows.csproj" />
        <ProjectReference Include="..\NXKit.XForms\NXKit.XForms.csproj" />
        <ProjectReference Include="..\NXKit\NXKit.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="PresentationCore" />
      <Reference Include="PresentationFramework" />
      <Reference Include="System.Xaml" />
      <Reference Include="WindowsBase" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Properties\Settings.Designer.cs">
        <DesignTimeSharedInput>True</DesignTimeSharedInput>
        <AutoGen>True</AutoGen>
        <DependentUpon>Settings.settings</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="Properties\Settings.settings">
        <Generator>SettingsSingleFileGenerator</Generator>
        <LastGenOutput>Settings.Designer.cs</LastGenOutput>
      </None>
    </ItemGroup>

</Project>
