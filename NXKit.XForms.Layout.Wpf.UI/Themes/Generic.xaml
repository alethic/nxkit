<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:nx="clr-namespace:NXKit;assembly=NXKit"
    xmlns:nx_xforms_layout="http://schemas.nxkit.org/nxkit/2014/xaml/xforms-layout"
    xmlns:local="clr-namespace:NXKit.XForms.Layout.Wpf.UI">
    
    <DataTemplate
        DataType="{x:Type nx_xforms_layout:FormVisual}">
        <ItemsControl
            BorderThickness="1"
            BorderBrush="Yellow"
            ItemsSource="{Binding Children}" />
    </DataTemplate>
    
</ResourceDictionary>
